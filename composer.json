{
    "name": "schnittstabil/sugared-phpunit",
    "type": "library",
    "description": "PHPUnit sweetened with ease",
    "license": "MIT",
    "keywords": ["sugared", "preconfigured", "phpunit", "testing"],
    "authors": [
        {
            "name": "Michael Mayer",
            "email": "michael@schnittstabil.de"
        }
    ],
    "require": {
        "fool/echolog": "^1.0",
        "phpunit/phpunit": "^5.2",
        "psr/log": "^1.0",
        "schnittstabil/composer-extra": "^0.3.0",
        "schnittstabil/get": "^2.0"
    },
    "require-dev": {
        "gamez/psr-testlogger": "^1.0",
        "vladahejda/phpunit-assert-exception": "^1.0",
        "satooshi/php-coveralls": "^1.0",
        "codeclimate/php-test-reporter": "^0.3.0"
    },
    "autoload": {
        "psr-4": { "Schnittstabil\\Sugared\\PHPUnit\\": "src" }
    },
    "autoload-dev": {
        "psr-4": { "Schnittstabil\\Sugared\\PHPUnit\\": "tests" }
    },
    "bin": [
        "sugared-phpunit"
    ],
    "scripts": {
        "test": "phpunit --configuration=internal_phpunit.xml"
    },
    "extra": {
        "schnittstabil/sugared-phpunit test-namespace": {
            "sugared": {
                "unicorns": 42
            }
        }
    }
}
